<!-- Validation failure messages -->
<% if @restaurant.errors.any? %>
  <% @restaurant.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Restaurant #<%= @restaurant.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_restaurant/<%= @restaurant.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @restaurant.name %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @restaurant.description %></textarea>
      </div>

      <!-- Label and input for address -->
      <div class="form-group">
        <label for="address" class="control-label">
          Address
        </label>

        <textarea id="address" name="address" placeholder="Address" class="form-control" rows="3"><%= @restaurant.address %></textarea>
      </div>

      <!-- Label and input for no_views -->
      <div class="form-group">
        <label for="no_views" class="control-label">
          No views
        </label>

        <input type="text" id="no_views" name="no_views" placeholder="No views" class="form-control" value="<%= @restaurant.no_views %>">
      </div>

      <!-- Label and input for neighborhood -->
      <div class="form-group">
        <label for="neighborhood" class="control-label">
          Neighborhood
        </label>

        <%= select_tag(:neighborhood, options_from_collection_for_select(Neighborhood.all, :id, :city, @restaurant.neighborhood), :class => "form-control") %>
      </div>

      <!-- Label and input for average_rating -->
      <div class="form-group">
        <label for="average_rating" class="control-label">
          Average rating
        </label>

        <input type="text" id="average_rating" name="average_rating" placeholder="Average rating" class="form-control" value="<%= @restaurant.average_rating %>">
      </div>

      <!-- Label and input for website -->
      <div class="form-group">
        <label for="website" class="control-label">
          Website
        </label>

        <input type="text" id="website" name="website" placeholder="Website" class="form-control" value="<%= @restaurant.website %>">
      </div>

      <button class="btn btn-warning">
        Update Restaurant
      </button>
      or
      <a href="/restaurants/<%= @restaurant.id %>">Cancel</a>
    </form>
  </div>
</div>
