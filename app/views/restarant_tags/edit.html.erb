<!-- Validation failure messages -->
<% if @restarant_tag.errors.any? %>
  <% @restarant_tag.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Restarant Tag #<%= @restarant_tag.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_restarant_tag/<%= @restarant_tag.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for restaurant_id -->
      <div class="form-group">
        <label for="restaurant_id" class="control-label">
          Restaurant
        </label>

        <%= select_tag(:restaurant_id, options_from_collection_for_select(Restaurant.all, :id, :created_at, @restarant_tag.restaurant_id), :class => "form-control") %>
      </div>

      <!-- Label and input for tag_id -->
      <div class="form-group">
        <label for="tag_id" class="control-label">
          Tag
        </label>

        <%= select_tag(:tag_id, options_from_collection_for_select(Tag.all, :id, :created_at, @restarant_tag.tag_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Restarant Tag
      </button>
      or
      <a href="/restarant_tags/<%= @restarant_tag.id %>">Cancel</a>
    </form>
  </div>
</div>
